<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
"http://www.springframework.org/dtd/spring-beans.dtd">


<beans>
	<bean id="parenttriangle" class="com.anand.spring.Triangle" abstract="true">
		<property name="points">
			<list>
			<ref bean="pointA" />
			</list>
		</property>	 
	</bean>
	
	
	<bean id="triangle1" class="com.anand.spring.Triangle" parent="parenttriangle">
		<property name="points">
		<list merge="true">
		<ref bean="pointB" />
		</list>
		</property>
	</bean>
	
	<bean id="traingle2" class="com.anand.spring.Triangle" parent="triangle1" >
		<property name="points">
			<list merge="true" >
			 <ref bean="pointC"/>
			</list>
		</property>
	</bean>
	
	
	
	
	<bean id="pointA" class="com.anand.spring.Point">
		<property name="x" value="0"></property>
		<property name="y" value="0"></property>
	</bean>
	
	
	<bean id="pointB" class="com.anand.spring.Point">
		<property name="x" value="-20"></property>
		<property name="y" value="0"></property>	 
	</bean>
	
	<bean id="pointC" class="com.anand.spring.Point">
		<property name="x" value="20"></property>
		<property name="y" value="0"></property>	 
	</bean>
	
</beans>